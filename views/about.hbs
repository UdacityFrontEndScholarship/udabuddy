  $(document).ready(function(){
    $('.sidenav').sidenav();

    var showText = function (target, message, index, interval){
      if (index<message.length){
        $(target).append(message.substring(index, index+3));
        index+=3;
        setTimeout(function(){
          showText(target, message, index, interval); }, interval);
      }
    }
